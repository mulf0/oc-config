{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": ["./AGENTS.md"],
  "lsp": {
    "sol-lsp": {
      "command": ["nomicfoundation-solidity-language-server", "--stdio"],
      "extensions": [".sol"]
    }
  },
  "provider": {
    "openrouter": {
      "models": {
        "moonshotai/kimi-k2.5": {
          "options": {
            "provider": {
              "only": ["moonshotai"]
            }
          }
        },
        "qwen/qwen3-coder": {
          "options": {
            "provider": {
              "only": ["chutes/fp8"]
            }
          }
        },
        "minimax/minimax-m2.1": {
          "options": {
            "temperature": 0.5,
            "provider": {
              "only": ["atlas-cloud/fp8"]
            }
          }
        },
        "z-ai/glm-4.7": {
          "options": {
            "temperature": 0.35,
            "provider": {
              "only": ["parasail/fp8"]
            }
          }
        },
        "x-ai/grok-4.1-fast": {
          "options": {
            "temperature": 0.45,
            "reasoning": {
              "effort": "high"
            }
          }
        },
        "google/gemini-3-flash-preview": {
          "options": {
            "temperature": 0.5,
            "reasoning": {
              "effort": "medium"
            }
          }
        }
      }
    },
    "anthropic": {
      "models": {
        "claude-sonnet-4-5": {
          "options": {
            "temperature": 0.35,
            "textVerbosity": "low",
            "reasoningEffort": "high",
            "thinking": {
              "type": "enabled",
              "budgetTokens": 4096
            }
          }
        }
      }
    }
  },
  "mcp": {
    "browsermcp": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "@browsermcp/mcp@latest"]
    }
  },
  "permission": {
    "skill": {
      "experts": "allow",
      "exploratory-architect": "allow",
      "deterministic-coder": "allow",
      "expert-researcher": "allow",
      "creative-coder": "allow",
      "*": "allow"
    }
  }
}
